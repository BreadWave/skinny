<div class="container p-t-md">
  <div class="row">
    <div class="col-md-4">

      <div class="panel panel-default panel-profile m-b-md hidden-xs">
        <div class="panel-heading">
          <% if @user.cover.small.nil? %>
            <%= image_tag @user.cover.small.url %>
          <%end%>
        </div>
        <div class="panel-body text-center">
          <a href="profile/index.html">
          <% if @user.profile.nil? %>
            <img class="panel-profile-img" src="/assets/generic.jpg">
          <% else %>
            <%= image_tag @user.profile.url, class: "panel-profile-img" %>
          <%end%>
          </a>

          <h5 class="panel-title">
            <a class="text-inherit" href="profile/index.html"><%= @user.name %></a>
          </h5>
          <p class="m-b-md"><%= @user.about %></p>
        </div>
      </div>

    </div>

    <div class="col-md-8">

      <div class="panel panel-default m-b-md">
        <div class="panel-heading">
          Edit Profile
        </div>
        <div class="panel-body">

          <%= form_for(@user) do |f| %>

            <div class="form-group">
              <%= f.label :hashtag, "Username" %>
              <%= f.text_field :hashtag, class: "form-control", placeholder: "Username" %>
            </div>

            <div class="form-group">
              <%= f.label :name, "Name" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
            </div>

            <div class="form-group">
              <%= f.label :cover, "Cover Image" %>
              <%= f.file_field :cover %>
            </div>

            <div class="form-group">
              <%= f.label :profile, "Profile Photo" %>
              <%= f.file_field :profile %>
            </div>

            <div class="form-group">
              <%= f.label :about, "About you" %>
              <%= f.text_area :about, class: "form-control", placeholder: "Say something about yourself...", rows: "3" %>
            </div>

            <%= f.submit "Update", class: "btn btn-primary btn-block" %>

        </div>
      </div>

      <div class="panel panel-default m-b-md">
        <div class="panel-heading">
          Edit Settings
        </div>
        <div class="panel-body">

            <div class="form-group">
              <%= f.label :email, "Email" %>
              <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            
            <!--

            AVERIGUAR COMO CAMBIAR LA CONTRASEÃ‘A
            <div class="form-group">
              <%= f.label :password, "New Password (leave blank if you don't want to change it)" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New Password" %>
            </div>

            Para despues SI esto no coincide con actual pasword ERROR AL SALVAR

            <div class="form-group">
              <label for="exampleInputPassword2">Confirm Password</label>
              <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password">
            </div>

            -->

            <%= f.submit "Update", class: "btn btn-primary btn-block" %>

          <% end %>

        </div>
      </div>

      <div class="panel panel-default m-b-md">
        <div class="panel-heading">
          Cancel my account
        </div>
        <div class="panel-body">

          <div class="form-group">
          Are you sure you want to delete your account? All your data will be lost
          </div>
          <%= button_to "Cancel my account", user_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-block" %>

        </div>
      </div>

       </div>

    </div>

      <%-# render "users/registrations/edit" -%>

  </div>
</div>